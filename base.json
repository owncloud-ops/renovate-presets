{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": ["Base preset for use with owncloud repos"],
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "docker:enableMajor",
    ":masterIssue",
    "group:linters"
  ],
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "Disable digest pinning for Drone CI",
      "managers": ["droneci"],
      "updateTypes": ["pin", "digest"],
      "enabled": false
    }
  ]
}
